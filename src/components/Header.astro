---
import LanguageSwitcher from "./LanguageSwitcher.astro";

const { lang } = Astro.params;

const navItems = [
    { href: `/${lang}/`, label: "Top" },
    {
        href: `/${lang}/blog`,
        label: "Blog",
        children: [
            { href: `/${lang}/blog/integrate`, label: "Integrate" },
            { href: `/${lang}/blog/character`, label: "Character" },
            { href: `/${lang}/blog/vendor`, label: "Vendor" },
            { href: `/${lang}/blog/conveyor`, label: "Conveyor" },
            { href: `/${lang}/blog/software`, label: "Software" },
        ],
    },
    {
        href: `/${lang}/newsrelease`,
        label: "News Release",
        children: [
            { href: `/${lang}/newsrelease/matching`, label: "Matching" },
            { href: `/${lang}/newsrelease/middle`, label: "Middle" },
            { href: `/${lang}/newsrelease/movie`, label: "Movie" },
            { href: `/${lang}/newsrelease/caption`, label: "Caption" },
            { href: `/${lang}/newsrelease/promotion`, label: "Promotion" },
        ],
    },
    {
        href: `/${lang}/notes`,
        label: "Notes",
        children: [
            { href: `/${lang}/notes/precedent`, label: "Precedent" },
            { href: `/${lang}/notes/pickup`, label: "Pickup" },
        ],
    },
];
---

<header>
    <div class="header-container">
        <div class="logo">
            <a href={`/${lang}/`}>Lantern-TECH Blog</a>
        </div>

        <nav class="desktop-nav">
            <ul>
                {
                    navItems.map((item) => (
                        <li class="nav-item">
                            <a href={item.href}>{item.label}</a>
                            {item.children && (
                                <ul class="dropdown">
                                    {item.children.map((child) => (
                                        <li>
                                            <a href={child.href}>
                                                {child.label}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </li>
                    ))
                }
            </ul>
        </nav>

        <div class="controls">
            <LanguageSwitcher />
            <button id="menu-toggle" aria-label="Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>

    <nav id="mobile-nav" class="mobile-nav">
        <ul>
            {
                navItems.map((item) => (
                    <li>
                        <a href={item.href}>{item.label}</a>
                        {item.children && (
                            <ul>
                                {item.children.map((child) => (
                                    <li>
                                        <a href={child.href}>- {child.label}</a>
                                    </li>
                                ))}
                            </ul>
                        )}
                    </li>
                ))
            }
        </ul>
    </nav>
</header>

<style>
    header {
        background-color: var(--color-bg);
        border-bottom: 3px solid var(--color-primary);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .logo a {
        font-family: var(--font-base);
        font-weight: 700;
        font-size: 1.5rem;
        color: var(--color-primary);
        text-decoration: none;
    }

    .desktop-nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 1.5rem;
    }

    .nav-item {
        position: relative;
    }

    .nav-item > a {
        font-weight: bold;
        color: var(--color-text);
        padding: 0.5rem 0;
        display: block;
    }

    .nav-item:hover > a {
        color: var(--color-primary);
        border-bottom: 2px solid var(--color-accent);
    }

    .dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        background-color: var(--color-bg);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        min-width: 150px;
        display: none;
        flex-direction: column !important;
        gap: 0 !important;
        border: 1px solid #ddd;
        border-top: 3px solid var(--color-accent);
    }

    .nav-item:hover .dropdown {
        display: flex;
    }

    .dropdown li a {
        display: block;
        padding: 0.5rem 1rem;
        color: var(--color-text);
        font-weight: normal;
    }

    .dropdown li a:hover {
        background-color: #f5f5f5;
        color: var(--color-primary);
    }

    .controls {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    #menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        flex-direction: column;
        gap: 5px;
        padding: 0.5rem;
    }

    #menu-toggle span {
        display: block;
        width: 25px;
        height: 3px;
        background-color: var(--color-primary);
        transition: 0.3s;
    }

    .mobile-nav {
        display: none;
        background-color: var(--color-bg);
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    .mobile-nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .mobile-nav li {
        margin-bottom: 0.5rem;
    }

    .mobile-nav > ul > li > a {
        font-weight: bold;
        font-size: 1.1rem;
    }

    .mobile-nav ul ul {
        padding-left: 1rem;
        margin-top: 0.5rem;
    }

    @media (max-width: 768px) {
        .desktop-nav {
            display: none;
        }

        #menu-toggle {
            display: flex;
        }

        .mobile-nav.open {
            display: block;
        }
    }
</style>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mobileNav = document.getElementById("mobile-nav");

    if (menuToggle && mobileNav) {
        menuToggle.addEventListener("click", () => {
            mobileNav.classList.toggle("open");
            const spans = menuToggle.querySelectorAll("span");
            // Simple animation toggling could go here
        });
    }
</script>
