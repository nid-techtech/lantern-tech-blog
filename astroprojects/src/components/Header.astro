---
import LanguageSwitcher from "./LanguageSwitcher.astro";
import {
    blogPages,
    newsreleasePages,
    notesPages,
    categoryNames,
} from "../data/navigation";
import type { PageDefinition } from "../data/navigation";

const { lang = "jp" } = Astro.params;

const getTitle = (page: PageDefinition) => {
    return page.title[lang as keyof typeof page.title] || page.title.jp;
};

const getCategoryName = (key: keyof typeof categoryNames) => {
    return (
        categoryNames[key][lang as keyof (typeof categoryNames)[typeof key]] ||
        categoryNames[key].jp
    );
};

const navItems = [
    { href: `/${lang}/`, label: getCategoryName("top") },
    {
        href: `/${lang}/blog`,
        label: getCategoryName("blog"),
        children: blogPages.map((page) => ({
            href: `/${lang}/blog/${page.slug}`,
            label: getTitle(page),
        })),
    },
    {
        href: `/${lang}/newsrelease`,
        label: getCategoryName("newsrelease"),
        children: newsreleasePages.map((page) => ({
            href: `/${lang}/newsrelease/${page.slug}`,
            label: getTitle(page),
        })),
    },
    {
        href: `/${lang}/notes`,
        label: getCategoryName("notes"),
        children: notesPages.map((page) => ({
            href: `/${lang}/notes/${page.slug}`,
            label: getTitle(page),
        })),
    },
];
---

<header>
    <div class="header-container">
        <div class="logo">
            <a href={`/${lang}/`}>
                <img
                    src="/lantech_icon_alphawhite.webp"
                    alt="Lantern-TECH Blog"
                />
                <span>Lantern-TECH Blog</span>
            </a>
        </div>

        <nav class="desktop-nav">
            <ul>
                {
                    navItems.map((item) => (
                        <li class="nav-item">
                            <a href={item.href}>{item.label}</a>
                            {item.children && (
                                <ul class="dropdown">
                                    {item.children.map((child) => (
                                        <li>
                                            <a href={child.href}>
                                                {child.label}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            )}
                        </li>
                    ))
                }
            </ul>
        </nav>

        <div class="controls">
            <div class="desktop-lang-switcher">
                <LanguageSwitcher />
            </div>
            <button id="menu-toggle" aria-label="Menu">
                <span></span>
                <span></span>
                <span></span>
            </button>
        </div>
    </div>

    <nav id="mobile-nav" class="mobile-nav">
        <ul>
            {
                navItems.map((item, index) => (
                    <li
                        class={`mobile-nav-item ${item.children ? "has-children" : ""}`}
                    >
                        <div class="nav-link-row">
                            <a href={item.href}>{item.label}</a>
                            {item.children && (
                                <button
                                    class="submenu-toggle"
                                    aria-expanded="false"
                                    aria-controls={`submenu-${index}`}
                                    aria-label={`Toggle ${item.label} submenu`}
                                >
                                    <svg
                                        viewBox="0 0 24 24"
                                        width="24"
                                        height="24"
                                        stroke="currentColor"
                                        stroke-width="2"
                                        fill="none"
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                    >
                                        <polyline points="6 9 12 15 18 9" />
                                    </svg>
                                </button>
                            )}
                        </div>
                        {item.children && (
                            <ul
                                id={`submenu-${index}`}
                                class="mobile-submenu"
                                hidden
                            >
                                {item.children.map((child) => (
                                    <li>
                                        <a href={child.href}>{child.label}</a>
                                    </li>
                                ))}
                            </ul>
                        )}
                    </li>
                ))
            }
        </ul>
        <div class="mobile-lang-switcher">
            <LanguageSwitcher />
        </div>
    </nav>
</header>

<style>
    header {
        background-color: var(--color-bg);
        border-bottom: 3px solid var(--color-primary);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .header-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        height: 80px; /* Ensure sufficient height for the logo */
    }

    .logo a {
        display: flex;
        align-items: center;
        text-decoration: none;
        color: var(--color-primary);
    }

    .logo img {
        height: 50px; /* Adjust as needed */
        width: auto;
    }

    .logo span {
        font-family: var(--font-base);
        font-weight: 800;
        font-size: 1.5rem;
        margin-left: 10px;
    }

    .desktop-nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
        display: flex;
        gap: 1.5rem;
    }

    .nav-item {
        position: relative;
    }

    .nav-item > a {
        font-weight: bold;
        color: var(--color-text);
        padding: 0.5rem 0;
        display: block;
    }

    .nav-item:hover > a {
        color: var(--color-primary);
        border-bottom: 2px solid var(--color-accent);
    }

    .dropdown {
        position: absolute;
        top: 100%;
        left: 0;
        background-color: var(--color-bg);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        min-width: 200px; /* Widened to accommodate longer titles */
        display: none;
        flex-direction: column !important;
        gap: 0 !important;
        border: 1px solid #ddd;
        border-top: 3px solid var(--color-accent);
        opacity: 0;
        transform: translateY(10px);
        transition:
            opacity 0.3s ease,
            transform 0.3s ease;
        z-index: 1001;
    }

    /* Show dropdown on hover */
    .nav-item:hover .dropdown {
        display: flex;
        opacity: 1;
        transform: translateY(0);
    }

    .dropdown li a {
        display: block;
        padding: 0.75rem 1rem;
        color: var(--color-text);
        font-weight: normal;
        white-space: nowrap; /* Prevent wrapping */
        border-bottom: 1px solid #f0f0f0;
    }

    .dropdown li:last-child a {
        border-bottom: none;
    }

    .dropdown li a:hover {
        background-color: #f5f5f5;
        color: var(--color-primary);
    }

    .controls {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    #menu-toggle {
        display: none;
        background: none;
        border: none;
        cursor: pointer;
        flex-direction: column;
        gap: 5px;
        padding: 0.5rem;
    }

    #menu-toggle span {
        display: block;
        width: 25px;
        height: 3px;
        background-color: var(--color-primary);
        transition: 0.3s;
    }

    .mobile-nav {
        display: none;
        background-color: var(--color-bg);
        padding: 1rem;
        border-bottom: 1px solid #eee;
    }

    .mobile-nav ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .mobile-nav li {
        border-bottom: 1px solid #f0f0f0;
    }

    .nav-link-row {
        display: flex;
        align-items: center;
        width: 100%;
    }

    .nav-link-row > a {
        flex-grow: 1;
        font-weight: bold;
        font-size: 1.2rem;
        padding: 1rem 0; /* Larger touch target */
        color: var(--color-text);
        text-decoration: none;
        display: block;
    }

    .submenu-toggle {
        background: none;
        border: none;
        padding: 1rem; /* Large touch target */
        cursor: pointer;
        color: var(--color-primary);
        display: flex;
        align-items: center;
        justify-content: center;
        transition: transform 0.3s ease;
    }

    .submenu-toggle.expanded {
        transform: rotate(180deg);
    }

    .mobile-submenu {
        display: none;
        background-color: #f9f9f9;
        padding-left: 0;
    }

    .mobile-submenu.open {
        display: block;
    }

    .mobile-submenu li {
        border-bottom: 1px solid #eee;
    }

    .mobile-submenu li:last-child {
        border-bottom: none;
    }

    .mobile-submenu a {
        display: block;
        padding: 1rem 1.5rem; /* Indented and large */
        font-size: 1.1rem;
        color: var(--color-text);
        text-decoration: none;
    }

    .mobile-submenu a:hover {
        color: var(--color-primary);
        background-color: #f0f0f0;
    }

    .mobile-lang-switcher {
        margin-top: 1rem;
        border-top: 1px solid #eee;
        padding-top: 1rem;
        display: flex;
        justify-content: center;
    }

    @media (max-width: 768px) {
        .desktop-nav {
            display: none;
        }

        .desktop-lang-switcher {
            display: none;
        }

        #menu-toggle {
            display: flex;
        }

        .mobile-nav.open {
            display: block;
        }
    }
</style>

<script>
    const menuToggle = document.getElementById("menu-toggle");
    const mobileNav = document.getElementById("mobile-nav");

    if (menuToggle && mobileNav) {
        menuToggle.addEventListener("click", () => {
            mobileNav.classList.toggle("open");
            const spans = menuToggle.querySelectorAll("span");
            // Simple animation toggling could go here
        });
    }

    const submenuToggles = document.querySelectorAll(".submenu-toggle");

    submenuToggles.forEach((toggle) => {
        toggle.addEventListener("click", () => {
            const isExpanded = toggle.getAttribute("aria-expanded") === "true";
            toggle.setAttribute("aria-expanded", String(!isExpanded));
            toggle.classList.toggle("expanded");

            const submenuId = toggle.getAttribute("aria-controls");
            if (submenuId) {
                const submenu = document.getElementById(submenuId);
                if (submenu) {
                    submenu.hidden = !submenu.hidden;
                    submenu.classList.toggle("open");
                }
            }
        });
    });
</script>
