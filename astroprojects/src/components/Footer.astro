---
import { ui } from "../data/ui";
import { categoryNames } from "../data/navigation";

const { lang } = Astro.params;
const year = new Date().getFullYear();

// langがundefinedまたはサポート外の場合のフォールバック
const currentLang =
    lang && typeof lang === "string" && (lang === "jp" || lang === "zh")
        ? lang
        : "en";
const t = ui[currentLang].footer;
const cats = {
    top: categoryNames.top[currentLang],
    blog: categoryNames.blog[currentLang],
    newsrelease: categoryNames.newsrelease[currentLang],
    notes: categoryNames.notes[currentLang],
};
---

<footer>
    <div class="footer-content">
        <div class="footer-section">
            <h3>{t.sitemap}</h3>
            <ul>
                <li><a href={`/${lang}/`}>{cats.top}</a></li>
                <li><a href={`/${lang}/blog`}>{cats.blog}</a></li>
                <li><a href={`/${lang}/newsrelease`}>{cats.newsrelease}</a></li>
                <li><a href={`/${lang}/notes`}>{cats.notes}</a></li>
            </ul>
        </div>

        <div class="footer-section">
            <h3>{t.links}</h3>
            <ul>
                <li>
                    <a
                        href="https://astro.build"
                        target="_blank"
                        rel="noopener noreferrer">Astro</a
                    >
                </li>
                <!-- Add more external links here -->
            </ul>
        </div>

        <div class="footer-section">
            <h3>Lantern-TECH Blog</h3>
            <p>{t.description}</p>
        </div>
    </div>

    <div class="copyright">
        &copy; {year} Lantern-TECH Blog. {t.rights}
    </div>
</footer>

<style>
    footer {
        background-color: var(--color-primary);
        color: #ffffff;
        padding: 3rem 1rem 1rem;
        margin-top: auto;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 2rem;
        margin-bottom: 2rem;
    }

    .footer-section h3 {
        color: var(--color-accent);
        margin-top: 0;
        margin-bottom: 1rem;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section li {
        margin-bottom: 0.5rem;
    }

    .footer-section a {
        color: #ffffff;
        opacity: 0.8;
    }

    .footer-section a:hover {
        opacity: 1;
        color: var(--color-accent);
    }

    .copyright {
        text-align: center;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1rem;
        font-size: 0.9rem;
        opacity: 0.7;
    }
</style>
