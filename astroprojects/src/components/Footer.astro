---
import { ui } from "../data/ui";
import {
    categoryNames,
    blogPages,
    newsreleasePages,
    notesPages,
    externalLinks,
} from "../data/navigation";

const { lang } = Astro.params;

// langがundefinedまたはサポート外の場合のフォールバック
const currentLang =
    lang && typeof lang === "string" && (lang === "jp" || lang === "zh")
        ? lang
        : "en";
const t = ui[currentLang].footer;
const cats = {
    top: categoryNames.top[currentLang],
    blog: categoryNames.blog[currentLang],
    newsrelease: categoryNames.newsrelease[currentLang],
    notes: categoryNames.notes[currentLang],
};

const getFaviconUrl = (url: string) => {
    const domain = new URL(url).hostname;
    return `https://www.google.com/s2/favicons?domain=${domain}`;
};
---

<footer>
    <div class="footer-content">
        <div class="footer-section">
            <h3 id="footer-sitemap">{t.sitemap}</h3>
            <ul>
                <li><a href={`/${currentLang}/`}>{cats.top}</a></li>
                <li>
                    <a href={`/${currentLang}/blog`}>{cats.blog}</a>
                    <ul class="sub-links">
                        {
                            blogPages.map((page) => (
                                <li>
                                    <a
                                        href={`/${currentLang}/blog/${page.slug}`}
                                    >
                                        {page.title[currentLang]}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </li>
                <li>
                    <a href={`/${currentLang}/newsrelease`}
                        >{cats.newsrelease}</a
                    >
                    <ul class="sub-links">
                        {
                            newsreleasePages.map((page) => (
                                <li>
                                    <a
                                        href={`/${currentLang}/newsrelease/${page.slug}`}
                                    >
                                        {page.title[currentLang]}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </li>
                <li>
                    <a href={`/${currentLang}/notes`}>{cats.notes}</a>
                    <ul class="sub-links">
                        {
                            notesPages.map((page) => (
                                <li>
                                    <a
                                        href={`/${currentLang}/notes/${page.slug}`}
                                    >
                                        {page.title[currentLang]}
                                    </a>
                                </li>
                            ))
                        }
                    </ul>
                </li>
            </ul>
        </div>

        <div class="footer-section">
            <h3 id="footer-links">{t.links}</h3>
            <ul>
                {
                    Object.values(externalLinks[currentLang]).map(
                        (link: any) => (
                            <li>
                                <a
                                    href={link.href}
                                    target="_blank"
                                    rel="noopener noreferrer"
                                    class="external-link"
                                >
                                    <img
                                        src={getFaviconUrl(link.href)}
                                        alt=""
                                        width="16"
                                        height="16"
                                        class="favicon"
                                    />
                                    <span class="link-label">{link.label}</span>
                                </a>
                            </li>
                        ),
                    )
                }
                <!-- Add more external links here -->
            </ul>
            <div class="footer-description">
                <h3>Lantern-TECH Blog</h3>
                <p id="footer-description">{t.description}</p>
            </div>
        </div>
    </div>

    <div class="copyright">
        <span id="footer-powered" set:html={t.poweredby} /> &copy; Lantern-TECH 2025
        <span id="footer-rights">{t.rights}</span>
    </div>
</footer>

<style>
    footer {
        background-color: var(--color-primary);
        color: #ffffff;
        padding: 3rem 1rem 1rem;
        margin-top: auto;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 2rem;
        margin-bottom: 2rem;
    }

    @media (max-width: 768px) {
        .footer-content {
            grid-template-columns: 1fr;
        }
    }

    .footer-section h3 {
        color: var(--color-accent);
        margin-top: 0;
        margin-bottom: 1rem;
    }

    .footer-section ul {
        list-style: none;
        padding: 0;
        margin: 0;
    }

    .footer-section .sub-links {
        padding-left: 20px;
        margin-top: 0.25rem;
        font-size: 0.9em;
        opacity: 0.9;
    }

    .footer-section li {
        margin-bottom: 0.5rem;
    }

    .footer-section a {
        color: #ffffff;
        opacity: 0.8;
    }

    .footer-section a:hover {
        opacity: 1;
        color: var(--color-accent);
    }

    .favicon {
        width: 16px;
        height: 16px;
        margin-right: 0.5rem;
        vertical-align: text-bottom;
    }

    .external-link {
        display: flex;
        align-items: center;
    }

    .footer-description {
        margin-top: 2rem;
        padding-top: 2rem;
        /* border-top: 1px solid rgba(255, 255, 255, 0.1); */
    }

    .copyright {
        text-align: center;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        padding-top: 1rem;
        font-size: 0.9rem;
        opacity: 0.7;
    }

    .copyright :global(a) {
        color: #ffffff;
        text-decoration: none;
    }

    .copyright :global(a:hover) {
        color: var(--color-accent);
        text-decoration: underline;
    }
</style>
