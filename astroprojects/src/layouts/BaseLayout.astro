---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

interface Props {
    title?: string;
    description?: string;
    lang?: string;
    ogImage?: string;
}

const {
    title = "Lantern-TECH Blog",
    description = "Tech Blog",
    lang = "jp",
    ogImage,
} = Astro.props;

// Map simple lang codes to full logic if needed, or just pass through
---

<!doctype html>
<html lang={lang}>
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/webp" href="/lantech_fav_2.webp" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <meta name="description" content={description} />

        <!-- OGP -->
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="article" />
        {ogImage && <meta property="og:image" content={ogImage} />}

        <!-- Google Fonts: LINE Seed JP, Noto Sans SC, JetBrains Mono -->
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400&family=LINE+Seed+JP:wght@400;700;800&family=Noto+Sans+SC:wght@400;700&display=swap"
            rel="stylesheet"
        />
        <slot name="head" />
    </head>
    <body>
        <Header />
        <main>
            <slot />
        </main>
        <Footer />
    </body>
</html>
